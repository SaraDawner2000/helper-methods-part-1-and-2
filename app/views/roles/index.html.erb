<h1>List of all roles</h1>
<hr>
  <%= link_to "Create new role", new_role_path %>
<hr>
<table>
  <thead>
    <th>ID</th>
    <th>Actor</th>
    <th>Movie</th>
    <th>Character</th>
    <th>Role details</th>
  </thead>
  <tbody>
    <% @roles.each do |role| %>
    <tr>
      <td><%= role.id %></td>
      <td><%= role.actor.name %></td>
      <td><%= role.movie.title %></td>
      <td><%= role.character %></td>
      <td><%= link_to "Show details", role_path(role.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
